@model Hairsalon.Models.TreatmentModel

@{
    ViewData["Title"] = "Radera behandling";
}

<div class="container-fluid inneradminfunctions-container">
    <div class="row">
        <section class="col-lg-12">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="RADERA" class="btn" /><br><br>
                <a asp-action="Index">Tillbaka till listan med behandlingar</a>
            </form>
        </section>
    </div>
</div>
