@* Kod tillhörande lösningen till projektuppgiften i kurs DT191G, skapat av Cecilia Edvardsson *@

@model IEnumerable<Hairsalon.Models.BookingModel>

@{
    ViewData["Title"] = "Bokningar";
}

<div class="container-fluid admin-container">
    <div class="row">
        <section class="col-lg-12">
            <br>
            <h1>@ViewData["Title"]</h1>   
            <p>
                <a asp-action="Create">Lägg till bokning</a>
            </p>            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phonenr)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AppointmentDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AppointmentTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Stylist)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TreatmentModel)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phonenr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointmentDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointmentTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stylist)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TreatmentModel!.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a>
                                <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>
